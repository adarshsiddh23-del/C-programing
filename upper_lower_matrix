#include <stdio.h>

int main()
{
    int a[10][10], i, j, n;

    printf("Enter order of square matrix: ");
    scanf("%d", &n);

    printf("Enter matrix elements:\n");
    for(i = 0; i < n; i++)
    {
        for(j = 0; j < n; j++)
        {
            scanf("%d", &a[i][j]);
        }
    }

    // Display Upper Triangle
    printf("\nUpper Triangular Matrix:\n");
    for(i = 0; i < n; i++)
    {
        for(j = 0; j < n; j++)
        {
            if(i > j)
                printf("0 ");
            else
                printf("%d ", a[i][j]);
        }
        printf("\n");
    }

    // Display Lower Triangle
    printf("\nLower Triangular Matrix:\n");
    for(i = 0; i < n; i++)
    {
        for(j = 0; j < n; j++)
        {
            if(i < j)
                printf("0 ");
            else
                printf("%d ", a[i][j]);
        }
        printf("\n");
    }

    return 0;
}
